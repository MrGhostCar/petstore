<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!--Add the entity Pet-->
    <changeSet id="20170503041524-1" author="user">
        <createTable tableName="pet">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="status" type="varchar(255)">
                <constraints nullable="true" />
            </column>
        </createTable>
    </changeSet>

    <!--Add the entity Order-->
    <changeSet id="20170503041524-2" author="user">
        <createTable tableName="store_order">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="pet_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_order_pet" references="pet(id)"/>
            </column>
            <column name="quantity" type="int">
                <constraints nullable="false" />
            </column>
            <column name="ship_date" type="DATETIME">
                <constraints nullable="false" />
            </column>
            <column name="status" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="complete" type="boolean">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>